extends layout 

block content 
    main.container
        h1= title
        form(action=`/adit/${task.id}` method="POST")
            label(for="title") Nuevo Titulo de la Tarea
            input(type="text", id="title",name="title", value=task.title, required)
            button.adit-button(type="submit") Editar
        a.back-button(href="/") volver  