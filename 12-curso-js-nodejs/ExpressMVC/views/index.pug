extends layout 

block content 
    main.container
        h1.text-center= title
        div.text-right
            a.add-button(href="/add") Agregar Tarea
        ul.task-list
            if tasks.length === 0
                li 
                    b.text.center No tienes tareas por hacer! 
            else
                each task in tasks
                    li(class= task.complete ? "complete":"") 
                        a(href=`/edit/${task.id}`) #{task.title}
                        if task.complete
                            a.uncomplete-button(href= `/uncompleted/${task.id}`) Desmarcar
                        else
                            a.complete-button(href= `/completed/${task.id}`) Completar
                        a.delete-button(href=`/delete/${task.id}`) Eliminar

